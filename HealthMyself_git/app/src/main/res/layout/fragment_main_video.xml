<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".Fragment.FragmentMainVideo">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:background="@color/white"
        android:layout_gravity="center"
        android:rowCount="4">

        <TextView
            android:id="@+id/btn_upperbody"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:background="@drawable/button"
            android:clickable="true"
            android:drawableTop="@drawable/ic_chest"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:text="상 체"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/btn_lower_body"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="하 체"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:drawableTop="@drawable/ic_leg_1"
            android:background="@drawable/button"
            android:padding="20dp"
            android:layout_margin="5dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/btn_aerobic"
            android:layout_row="2"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="유 산 소"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:drawableTop="@drawable/ic_run_1"
            android:background="@drawable/button"
            android:padding="20dp"
            android:layout_margin="5dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/btn_core"
            android:layout_row="3"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="코 어"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:drawableTop="@drawable/ic_core"
            android:background="@drawable/button"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:clickable="true"
            tools:ignore="RtlCompat" />

    </GridLayout>

</FrameLayout>