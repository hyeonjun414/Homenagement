<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentMainVideo">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:background="@drawable/button_container"
        android:rowCount="4">
        <TextView
            android:id="@+id/btn_upperbody"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="상 체"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:drawableTop="@drawable/ic_outline_subscriptions_24"
            android:background="@drawable/button_style"
            android:paddingTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/btn_lower_body"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="하 체"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:drawableTop="@drawable/ic_outline_notifications_active_24"
            android:background="@drawable/button_style"
            android:paddingTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/btn_aerobic"
            android:layout_row="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="유 산 소"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:drawableTop="@drawable/ic_outline_no_food_24"
            android:background="@drawable/button_style"
            android:paddingTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/btn_core"
            android:layout_row="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="코 어"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:drawableTop="@drawable/ic_outline_subscriptions_24"
            android:background="@drawable/button_style"
            android:paddingTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            tools:ignore="RtlCompat" />

    </GridLayout>

</FrameLayout>